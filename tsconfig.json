{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"module": "ESNext",
		"moduleResolution":	"Node",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"target": "ESNext",
	},
	"include": [
		"src/**/*",
		"rollup.config.ts",
	],
	"exclude": [
		"node_modules",
		"dist"
	],
	"extends": "./tsconfig.paths.json"
}
